source 'https://rubygems.org'

# Watir é uma biblioteca Ruby para automação de testes de navegador
gem 'watir'

# Webdrivers gerencia drivers de navegador automaticamente
gem 'webdrivers'

# OS fornece informações sobre o sistema operacional
gem 'os'

# Selenium-webdriver é um driver de navegador para automação de testes
gem 'selenium-webdriver'

# RSpec é um framework de teste para Ruby
gem 'rspec'

